programa
{
	
	funcao inicio()
	{
	
	inteiro diaria, idade, meia, gratuidade, hospede
	cadeia nomes, PARE, PARAR, parar, pare_

//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	

	PARE = "PARE"
	PARAR = "PARAR"
	parar = "parar"
	pare_ = "pare"
	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
	
	meia = 0
	gratuidade = 0
	hospede = 0
	nomes = "nomequalquer"
	idade = 0

//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
// ---------------------------------------------------------------------Atividade 2 - Problema 3----------------------------------------------------------------------------------------------------------//

		escreva("\n", "Por favor, digite o valor da diária: R$")
		leia(diaria)
	
		enquanto(nomes == nomes e idade == idade)
		{
			escreva("\n", "Digite o NOME do hospede: ")
			leia(nomes)

		se(nomes == PARE ou nomes == PARAR ou nomes == parar ou nomes == pare_)

			escreva("\n", "Total de hospedagens: R$", diaria * hospede + diaria * meia / 2,"; ", (gratuidade)," gratuidade(s); ", (meia)," meia(s).", "\n")
		
		se(nomes == PARE ou nomes == PARAR ou nomes == parar ou nomes == pare_)

			retorne
		
		senao
		
			escreva("\n", "Digite a IDADE do hospede: ")
			leia(idade)

		se(idade > 3 e idade <= 80)
		{
			hospede = hospede + 1
		}
		se(idade > 0 e idade < 4)
		{	
			escreva("\n", (nomes)+", POSSUI GRATUIDADE.", "\n")
			gratuidade = gratuidade + 1
		}
		se(idade >= 81)
		{	
			escreva("\n", (nomes)+", PAGA METADE DO PREÇO.", "\n")
			meia = + meia + 1
		}
		}

//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//	

	}
}

